<% if @breadcrumbs %>
<ul class="breadcrumb">
  <% separator = divider %>
  <% @breadcrumbs[0..-2].each do |crumb| %>
  <li>
    <%= link_to crumb[:name], crumb[:url] %>
    <span class="divider"><%= separator %></span>
  </li>
  <% end %>
  <li class="active">
    <%= link_to @breadcrumbs.last[:name], @breadcrumbs.last[:url] %>
  </li>
</ul>
<% end %>
